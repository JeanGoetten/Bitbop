<div class="mx-auto">
    <h3>Editar personagem: </h3>
<form action="/create/edit" method="POST">
<input type="hidden" name="id" value="{{new_chars._id}}">
    <label for="nome">Nome: </label>
    <input type="text" id="nome" name="nome" placeholder="nome do personagem" class="form-control" value="{{new_chars.nome}}">
    <br>
    <label for="cor">Cor: </label>
    <input type="text" id="nome" name="cor" placeholder="cor do personagem" class="form-control" value="{{new_chars.cor}}">
    <br>
    <script>
    function success() {
	 if(document.getElementById("nome").value==="") { 
            document.getElementById('button').disabled = true 
        } else { 
            document.getElementById('button').disabled = false
        }
    }
    </script>
    <button type="submit" class="btn btn-dark" name="button">Salvar</button>
    <br>
    <br>
</form>
</div>